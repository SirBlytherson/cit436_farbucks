<p id="notice"><%= notice %></p>

<p>Order Details</p>

<% if !@order.order_items %>
  <%= "There are no items in this order =/" %>
<% else %>
  <%= "You have #{@order.order_items.count} #{"item".pluralize(@order.order_items.count)} in this order." %>

<table class="table table-striped">
  <% @order.order_items.each do |item| %>
    <tr>
      <td><%= "#{item.item_detail.menu_item.name}" %></td>
      <td><%= "#{item.item_detail.size}" %></td>
      <td><%= "#{number_to_currency(item.item_detail.price)}" %></td>
    </tr>
  <% end %>
</table>
<% end %>

<p>Order Subtotal: <%= number_to_currency(order.subtotal) %></p>

<p>
  <%= link_to 'Checkout', checkout_path(@order.id), :class => "btn btn-primary" %>
</p>
