<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @menu_item.name %>
</p>

<p>
  <img src="https://storage.googleapis.com/farbucks_menu_images/<%= @menu_item.menu_image %>.jpg" class="img-responsive">
</p>

<ul>
	<% @menu_item.item_details.each do |d| %>
	<li>
		<%= render "item_detail_row", item_detail: d, order_item: current_order.order_items.new %>
	</li>
	<% end %>
</ul>

<%= link_to 'Edit', edit_menu_item_path(@menu_item) %> |
<%= link_to 'Back', menu_items_path %>
