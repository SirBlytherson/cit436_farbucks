<!DOCTYPE html>
<html>
  <head>
	<title>Farbucks</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true%>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<a class="navbar-brand" href="#">
			<img src="https://storage.googleapis.com/farbucks_store_images/farbucks_logo.png" width="30" height="30" alt=""> Farbucks
		</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		
		<ul class="navbar-nav">
			<li class="nav-item active">
				<%= link_to("Home", page_path("home"), :class => "nav-link") %>
			</li>
			<li class="nav-item">
				<%= link_to("Menu", menu_categories_path, :class => "nav-link") %>
			</li>
			<li class="nav-item">
				<%= link_to("Locations", locations_path, :class => "nav-link") %>
			</li>
		</ul>
	</nav>

	<script>
		$(document).ready(function() {
			var navsObj = $('nav li');
			var navs = $.map(navsObj, function(value, index) {
				return value;
			});
			var hrefs = [];
			var found = 0;
			navs.forEach(function(nav, index) {
				var kid = $(nav).children().filter('a');
				$(nav).removeClass('active');
				if(window.location.href.includes(kid.attr('href'))) {
					$(nav).addClass('active');
					found = 1;
				}
				
			});
			if(found == 0) {
			  navs.forEach(function(nav, index) {
			    if(index == 0) {
				  $(nav).addClass('active');
				}
			  });
			}
		});
	</script>

	<%= yield %>
  </body>
</html>
